.wrapper
  display block
  margin 5em auto
  text-align center

.card
  background-color white
  border-radius 2px
  display inline-block
  height 16em
  margin 1em 1em 2.5em 1em
  MaterialShadow(1)
  position relative
  width 19em
  &:hover
    MaterialShadow(2)

  &:hover::after
    background-color rgba($default-primary-color, 1)
    left 16px
    MaterialShadow(2)
    top 40px

  &::after
    background-color rgba($default-primary-color, .7)
    border-radius 2px
    content ''
    display block
    height 16em
    left 10px
    MaterialShadow(1)
    position absolute
    top  10px
    transition all .15s linear
    width 19em
    z-index -1

  &__image
    border-radius 2px 0 0 2px
    display inline-block
    width 7em
