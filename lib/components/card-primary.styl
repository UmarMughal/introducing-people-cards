/**  COMPONENTE WRAPER
 **------------------------------------------*/
.wrapper
  display block
  margin 5em auto
  text-align center
  width 45em

/**  COMPONENTE TITLE
 **------------------------------------------*/
.title
  font-weight 400
  border-bottom 1px solid $grey-300
  color rgba($grey-800, .70)
  margin 0
  padding-bottom .25em

@media screen and (max-width: 720px)
  .wrapper
    width 100%

/**  COMPONENTE CARD
 **------------------------------------------*/
.card
.card::after
  border-radius .125em
  MaterialShadow(1)
  height $desktop-height
  width $desktop-width

@media screen and (max-width: 720px)
  .card
  .card::after
    height $mobile-height
    width $mobile-width

.card
  background-color white
  display inline-block
  margin 1em 2em 3.5em 1em
  position relative

  &::after
    background-color rgba($default-primary-color, .6)
    content ''
    display block
    left 10px
    position absolute
    top 10px
    transition all .15s linear
    z-index -1

  &:hover::after
    background-color rgba($default-primary-color, 1)
    left 16px
    top 40px

  &__button--inactive
    display none
    visibility hidden

  &__button
  &__button--inactive
    height 32px
    line-height 32px
    position absolute
    right 0
    text-decoration none
    top .5em
    transition all linear .3s
    width 32px

    &::after
      color rgba($grey-800, .87)
      content'\f19b'
      font-size 24px

  &:hover .card__button--inactive
    opacity 0
    transform rotate(90deg)
    visibility hidden

  &__image-container
    display inline-block
    height 100%
    margin 0
    overflow hidden
    width $img-width

  &__image
    border-radius 2px 0 0 2px
    width 100%

@media screen and (max-width: 660px)
  .card
    margin 1em 2em 3.5em 2em

@media screen and (max-width: 410px)
  .card
    display block
    margin 1em auto 3.5em auto
    padding-right 5px
    &::after
      left 14px

@media screen and (max-width: 720px)
  .card__button--inactive
    display block
    visibility visible
