.header
  width 100%
  display block

  &__nav
    background-color $default-primary-color
    display block
    height 2.5em
    MaterialShadow(1)
    text-align right
    width 100%

  &__link
    box-sizing border-box
    color rgba(white, 54%)
    display block
    float right
    font-size 1.5rem
    height 40px
    padding 8px
    text-align center
    text-decoration none
    width 40px
    transition color .3s linear
    &:hover
      color rgba(white, 87%)

    //link-icons
    &:nth-child(1)::after
      content '\f343'
    &:nth-child(2)::after
      content '\f360'
    &:nth-child(3)::after
      content '\f345'
