/**  INTERACCIONES .card::after
 **------------------------------------------*/

// card desactivado
.card[data-active="inactive"]::after
  opacity .6
  transform translateX(10px) translateY(10px)

//card activado con clic
.card[data-active="active"]::after
  opacity 1
  transform translateX(16px) translateY(40px)

//card activado con hover por encima de 1025px
@media screen and (min-width: 1025px)
  .card[data-active="inactive"]:hover::after
    opacity 1
    transform translateX(16px) translateY(40px)



/**  INTERACCIONES .card__btn
 **------------------------------------------*/

//card__btn desactivado
.card[data-active="inactive"] > .card__btn::before
  content '\f19b' // \f19b
  // opacity 1
  transform rotate(0deg)

//card__btn activado
.card[data-active="active"] > .card__btn::before
  content '\f136' // \f136
  // opacity 1
  transform rotate(-90deg)

.card[data-active="active"] > .card__btn:hover
.card[data-active="inactive"] > .card__btn:hover
  background-color $grey-100

/**  INTERCCIONES .social
 **------------------------------------------*/
.card[data-active="inactive"] > .social
  height 0
  visibility hidden

.card[data-active="active"] > .social
  height 40px
  visibility visible

//.social activado con hover por encima de 1025px
@media screen and (min-width: 1025px)
  .card[data-active="inactive"]:hover > .social
    height 40px
    visibility visible

/**  INTERACCIONES .social__link
 **------------------------------------------*/
.card[data-active="inactive"] > .social >.social__link
  border-radius 50%
  transform scale(0)

.card[data-active="active"] > .social >.social__link
  border-radius 0
  transform scale(1)

//.social__link activado con hover por encima de 1025px
@media screen and (min-width: 1025px)
  .card[data-active="inactive"]:hover > .social >.social__link
    border-radius 0
    transform scale(1)
